@using ZPWEB.Models
@model Course


@{
    ViewData["Title"] = "Add Course";
}


<div class="container-fluid mt-3">
    <form asp-action="Save" id="myForm" method="post">
        <div class="row d-flex justify-content-center">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    @* <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>Course Information</strong>
                        <a class="btn btn-primary btn-sm" asp-action="Index">Exesting Course</a>
                    </div> *@
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <p>Course Information</p>
                            <a class="btn btn-primary btn-sm" asp-action="Index">Exesting Course</a>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Code -->
                        <div class="mb-3 row">
                            <label asp-for="Code" class="col-sm-3 col-form-label">Code</label>
                            <div class="col-sm-9">
                                <input asp-for="Code" class="form-control" id="code" readonly>
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Customer Name -->
                        <div class="mb-3 row">
                            <label asp-for="CourseName" class="col-sm-3 col-form-label">Course Name</label>
                            <div class="col-sm-9">
                                <input asp-for="CourseName" class="form-control" id="courseName">
                                <span asp-validation-for="CourseName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Contact No -->
                        <div class="mb-3 row">
                            <label asp-for="CourseFee" class="col-sm-3 col-form-label">Course Fee</label>
                            <div class="col-sm-9">
                                <input asp-for="CourseFee" type="number" class="form-control" id="courseFee">
                                <span asp-validation-for="CourseFee" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="mb-3 row">
                            <label asp-for="Duration" class="col-sm-3 col-form-label">Duration</label>
                            <div class="col-sm-9">
                                <input asp-for="Duration" class="form-control" id="duration">
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="reset" class="btn btn-danger">Reset</button>
                            <button type="submit" class="btn btn-warning">Save</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $("#myForm").on('submit',function(){
            var courseName=$("#courseName").val().trim();
            var courseFee=$("#courseFee").val().trim();
            var duration=$("#duration").val().trim();

            var offset=20;
            var container=$("body");

            if(courseName==="")offset=createAlert("❌ Course Name is Required",container,offset)
            if(courseFee==="")offset=createAlert("❌ Course Fee Required",container,offset)
            if(duration==="")offset=createAlert("❌ Duration Required",container,offset)

               if($(".field-alert").length >0) return false;
               this.submit();
        });
    })
</script>