@using ZPWEB.Models
@model Schedule

@{
    var instractor = ViewBag.Method;
}
<div class="container-fluid mt-3">
    <form asp-action="Save" id="myForm" method="post">
        <div class="row d-flex justify-content-center">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>Schedule Information</strong>
                        <a class="btn btn-primary btn-sm" asp-action="Index">Exesting Schedule</a>
                    </div>
                    <div class="card-body">

                        <!-- Code -->
                        <div class="mb-3 row">
                            <label asp-for="Code" class="col-sm-3 col-form-label">Code</label>
                            <div class="col-sm-9">
                                <input asp-for="Code" class="form-control" id="code" readonly>
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Customer Name -->
                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-sm-3 col-form-label">Schedule Name</label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" id="cName">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="reset" class="btn btn-danger">Reset</button>
                            <button type="submit" class="btn btn-warning">Save</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $("#myForm").on('submit',function(){
            var name=$("#cName").val().trim();


            var offset=20;
            var container=$("body");

            if(name==="")offset=createAlert("❌ Name is Required",container,offset)


               if($(".field-alert").length >0) return false;
               this.submit();
        });
    })
</script>