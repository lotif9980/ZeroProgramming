@using ZPWEB.Models
@using ZPWEB.ViewModel
@model Student

@{
    ViewData["Title"] = "Student Update";
}

<div class="container mt-3">
    <form asp-action="Update" id="myForm" method="post" enctype="multipart/form-data">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong class="mb-0">Update Student Information</strong>
                <a class="btn btn-primary btn-sm" asp-action="Index">Existing Student</a>
            </div>

            <div class="card-body">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6 border-end">
                        <div class="mb-3 row">
                            <label asp-for="Id" class="col-sm-4 col-form-label">Id</label>
                            <div class="col-sm-8">
                                <input asp-for="Id" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Code" class="col-sm-4 col-form-label">Code</label>
                            <div class="col-sm-8">
                                <input asp-for="Code" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-sm-4 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" id="cName" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ContactNo" class="col-sm-4 col-form-label">Contact No</label>
                            <div class="col-sm-8">
                                <input asp-for="ContactNo" class="form-control" id="contactNo" type="number" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Address" class="col-sm-4 col-form-label">Address</label>
                            <div class="col-sm-8">
                                <input asp-for="Address" class="form-control" id="address" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="FatherName" class="col-sm-4 col-form-label">Father Name</label>
                            <div class="col-sm-8">
                                <input asp-for="FatherName" class="form-control" id="fatherName" />
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label asp-for="FatherPhoneNumber" class="col-sm-4 col-form-label">Father Phone</label>
                            <div class="col-sm-8">
                                <input asp-for="FatherPhoneNumber" class="form-control" id="fatherContactNo" type="number" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="MotherName" class="col-sm-4 col-form-label">Mother Name</label>
                            <div class="col-sm-8">
                                <input asp-for="MotherName" class="form-control" id="motherName" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="SchoolName" class="col-sm-4 col-form-label">School Name</label>
                            <div class="col-sm-8">
                                <input asp-for="SchoolName" class="form-control" id="schoolName" />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Class" class="col-sm-4 col-form-label">Class</label>
                            <div class="col-sm-8">
                                <input asp-for="Class" class="form-control" id="class" />
                            </div>
                        </div>

                        <!-- Profile Picture -->
                        <div class="mb-3 row">
                            <label asp-for="ImageFile" class="form-label col-sm-4">Profile Picture</label>
                            <div class="col-sm-8">
                                <input asp-for="ImageFile" class="form-control" type="file" id="imageFile" />

                                @if (!string.IsNullOrEmpty(Model.Picture))
                                {
                                    <div class="mt-2">
                                        <img src="~/Students/@Model.Picture"
                                             alt="Profile Picture"
                                             id="previewImage"
                                             class="img-thumbnail shadow-sm"
                                             style="width:120px; height:120px; object-fit:cover;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-2">
                                        <img src="~/images/default.png"
                                             alt="Default Image"
                                             id="previewImage"
                                             class="img-thumbnail shadow-sm"
                                             style="width:120px; height:120px; object-fit:cover;" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="reset" class="btn btn-danger">Reset</button>
                    <button type="submit" class="btn btn-warning">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {

        // Preview selected image immediately
        $("#imageFile").change(function () {
            const file = this.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    $("#previewImage").attr("src", event.target.result);
                };
                reader.readAsDataURL(file);
            }
        });

        // Form validation
        $("#myForm").on('submit', function () {
            var name = $("#cName").val().trim();
            var contactNo = $("#contactNo").val().trim();
            var address = $("#address").val().trim();
            var fatherName = $("#fatherName").val().trim();
            var fatherContactNo = $("#fatherContactNo").val().trim();

            var offset = 20;
            var container = $("body");

            if (name === "") offset = createAlert("❌ Name is Required", container, offset);
            if (contactNo === "") offset = createAlert("❌ Contact No is Required", container, offset);
            if (address === "") offset = createAlert("❌ Address is Required", container, offset);
            if (fatherName === "") offset = createAlert("❌ Father Name is Required", container, offset);
            if (fatherContactNo === "") offset = createAlert("❌ Father Contact No is Required", container, offset);

            if ($(".field-alert").length > 0) return false;
            this.submit();
        });
    });
</script>
