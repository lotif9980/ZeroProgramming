@using ZPWEB.Models
@model Student

@{
    var instractor = ViewBag.Method;
}
<div class="container mt-3">
    <form asp-action="Save" id="myForm" method="post" enctype="multipart/form-data">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-around align-items-center">
                <strong class="mb-0">Student Information</strong>
                <a class="btn btn-primary btn-sm" asp-action="Index">Existing Student</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6 border-end">
                        <div class="mb-3 row">
                            <label asp-for="Code" class="col-sm-4 col-form-label">Code</label>
                            <div class="col-sm-8">
                                <input asp-for="Code" class="form-control" id="code" readonly>
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Name" class="col-sm-4 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control" id="cName">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ContactNo" class="col-sm-4 col-form-label">Contact No</label>
                            <div class="col-sm-8">
                                <input asp-for="ContactNo" class="form-control" id="contactNo" type="number">
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Address" class="col-sm-4 col-form-label">Address</label>
                            <div class="col-sm-8">
                                <input asp-for="Address" class="form-control" id="address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="FatherName" class="col-sm-4 col-form-label">Father Name</label>
                            <div class="col-sm-8">
                                <input asp-for="FatherName" class="form-control" id="fatherName">
                                <span asp-validation-for="FatherName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label asp-for="FatherPhoneNumber" class="col-sm-4 col-form-label">Father Phone</label>
                            <div class="col-sm-8">
                                <input asp-for="FatherPhoneNumber" class="form-control" id="fatherPhoneNumber" type="number">
                                <span asp-validation-for="FatherPhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="MotherName" class="col-sm-4 col-form-label">Mother Name</label>
                            <div class="col-sm-8">
                                <input asp-for="MotherName" class="form-control" id="motherName">
                                <span asp-validation-for="MotherName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="SchoolName" class="col-sm-4 col-form-label">School Name</label>
                            <div class="col-sm-8">
                                <input asp-for="SchoolName" class="form-control" id="schoolName">
                                <span asp-validation-for="SchoolName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="Class" class="col-sm-4 col-form-label">Class</label>
                            <div class="col-sm-8">
                                <input asp-for="Class" class="form-control" id="class">
                                <span asp-validation-for="Class" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="ImageFile" class="form-label col-sm-4">Profile Picture</label>
                            <div class="col-sm-8">
                                <input asp-for="ImageFile" class="form-control" type="file" id="imageFile" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="reset" class="btn btn-danger">Reset</button>
                    <button type="submit" class="btn btn-warning">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $("#myForm").on('submit',function(){
            var name=$("#cName").val().trim();


            var offset=20;
            var container=$("body");

            if(name==="")offset=createAlert("❌ Name is Required",container,offset)


               if($(".field-alert").length >0) return false;
               this.submit();
        });
    })
</script>